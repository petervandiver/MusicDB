<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @album.title %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @album.artist.name %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @album.genre.name %>
</p>

<p>
	<strong>Album Covers:</strong>
	<%= image_tag(@album.cover_url, width: 200) if @album.cover.present? %>
</p>

<p>
	<strong>Songs:</strong>
<ul>
<%= @album.songs.each do |song| %>
	<li><%= song.name %></li>
<% end %>
</ul>
</p>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
